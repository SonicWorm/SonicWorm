{
  "name": "sonicworm",
  "version": "0.1.0",
  "description": "SonicWorm - Multiplayer GameFi on Sonic Network",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:security": "hardhat run scripts/security-check.ts",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network sonic-testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network sonic-mainnet",
    "verify:testnet": "hardhat verify --network sonic-testnet",
    "verify:mainnet": "hardhat verify --network sonic-mainnet",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "full-test": "npm run compile && npm run test && npm run test:security",
    "start:all": "concurrently \"npm run server\" \"npm run dev\""
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^1.3.0",
    "@tanstack/react-query": "^4.36.0",
    "ethers": "^6.8.0",
    "phaser": "^3.90.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "solc": "^0.8.30",
    "viem": "^1.19.0",
    "wagmi": "^1.4.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "hardhat": "^2.19.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.0"
  },
  "keywords": [
    "gamefi",
    "blockchain",
    "sonic-network",
    "multiplayer",
    "web3",
    "nft",
    "defi"
  ],
  "author": "Sonic Snake Team",
  "license": "MIT"
}
